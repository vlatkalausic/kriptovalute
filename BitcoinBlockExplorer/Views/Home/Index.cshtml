@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <br />
    <h1 class="display-4">Welcome</h1>
    <p style="color:red">@ViewBag.message</p>

    <div class="leftDiv">
        <br /><br />
        <h4><b>Recent bloks:</b></h4>
        <hr />
        <br />
        <dl class="row">
            @for (int i = 0; i < 20; i++)
            {
                <dt class="col-sm-2">
                    Height:
                </dt>
                <dd class="col-sm-4">
                    @{
                        int p = ViewBag.rb - i;
                    }
                    <a href="https://localhost:44375/?search=@p">@p</a>
                </dd>
            }
            </dl>
    </div>
    <div class="rightDiv">
        <br /><br />
        <h4><b>Recent transactions:</b></h4>
        <hr />
        <br />
        <dl class="row">
            @for (int i = 0; i < 10; i++)
            {
                <dt class="col-sm-2">
                    Hash:
                </dt>
                <dd class="col-sm-10">
                    <a href="https://localhost:44375/?search=@ViewBag.rt[i]">@ViewBag.rt[i]</a>
                    
                </dd>
            }
            </dl>
    </div>
</div>


<style type="text/css">

    .leftDiv {
        overflow: hidden;
        height: 1%;
        width: 50%;
        float: left;
        
    }

    .rightDiv {
        overflow: hidden;
        height: 1%;
        width: 50%;
        float: right;
        
    }
</style>